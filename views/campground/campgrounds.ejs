<% include ../partials/header %>

<% if (error_msg) { error_msg.forEach(function(error) { %>
    <div class="alert alert-danger" role="alert"><%= error.msg %></div>
<% });} %>

<div class="container-fluid">
  <div class="jumbotron">
     <h1>List of Campgrounds</h1>
     
     <p>
         <a class="btn btn-primary btn-large" href="/campgrounds/new">New Camp</a>
     </p>
  </div>         
    <ul>
        <div class="row text-center" style="display:flex; flex-wrap; wrap;">
            <% getCampList.forEach(function(camps) { %>
            <div class="col-md-3 col-sm-6">
               <div class="card mb-2">
                    <img class="img-thumbnail" style = "border: none" src= <%= camps.url %>>
                    <div>
                        <h4 class="caption"><%= camps.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camps._id %>" class="btn btn-xs btn-success">More Info</a>
                    </p>
                </div> 
            </div>
            <% }) %>
        </div>
    </ul>
</div>


<% include ../partials/footer %>